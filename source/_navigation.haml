#bs-example-navbar-collapse-1.collapse.navbar-collapse
  %ul.nav.navbar-nav.navbar-default
    -if (current_page.path == 'index.html')
      - data.menu.each do |i|
        -if (!i.onlyfooter)
          %li
            = link_to i.title, i.link, :class => "page-scroll"
    -else
      - data.menu.each do |i|
        - if (!i.onlyfooter)
          %li{class: ((current_page.path == i.link) ? 'active': nil)}
            - if i.link.match('^#').nil?
              = link_to i.title, i.link, :class => "page-scroll"
            - else
              %li
                = "<a href='index.html#{i.link}'>#{i.title}</a>"

